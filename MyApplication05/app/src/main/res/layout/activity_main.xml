<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <TextView
        android:id="@+id/tv_show"
        android:background="#eee"
        android:textSize="40sp"
        android:gravity="bottom|right"
        android:layout_width="match_parent"
        android:layout_height="145dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llt"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                >

                <Button
                    android:id="@+id/bt_revoke"
                    android:text="DEL"
                    android:textSize="40sp"
                    android:layout_weight="2"
                    android:layout_width="100dp"
                    android:layout_height="70dp" />


                <Button
                    android:id="@+id/bt_chang"
                    android:text="bin"
                    android:layout_weight="1"
                    android:textSize="40sp"
                    android:layout_width="50dp"
                    android:layout_height="70dp" />
                <Button
                    android:id="@+id/bt_dian"
                    android:text="."
                    android:textSize="40sp"
                    android:layout_weight="1"
                    android:layout_width="50dp"
                    android:layout_height="70dp" />
            </LinearLayout>
            <!--1,2,3,/按钮-->
            <LinearLayout
                android:id="@+id/ll_1"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                >

                <Button
                    android:id="@+id/bt_1"
                    android:text="1"
                    android:textSize="40sp"
                    android:layout_weight="1"
                    android:layout_width="70dp"
                    android:layout_height="70dp" />
                <Button
                    android:id="@+id/bt_2"
                    android:text="2"
                    android:textSize="40sp"
                    android:layout_weight="1"
                    android:layout_width="70dp"
                    android:layout_height="70dp" />
                <Button
                    android:id="@+id/bt_3"
                    android:text="3"
                    android:layout_weight="1"
                    android:textSize="40sp"
                    android:layout_width="70dp"
                    android:layout_height="70dp" />
                <Button
                    android:id="@+id/bt_chu"
                    android:text="/"
                    android:layout_weight="1"
                    android:textSize="40sp"
                    android:layout_width="70dp"
                    android:layout_height="70dp" />
            </LinearLayout>

            <!--4,5,6,*按钮-->
            <LinearLayout
                android:id="@+id/ll_2"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                >

                <Button
                    android:id="@+id/bt_4"
                    android:text="4"
                    android:textSize="40sp"
                    android:layout_weight="1"
                    android:layout_width="70dp"
                    android:layout_height="70dp" />
                <Button
                    android:id="@+id/bt_5"
                    android:text="5"
                    android:textSize="40sp"
                    android:layout_weight="1"
                    android:layout_width="70dp"
                    android:layout_height="70dp" />
                <Button
                    android:id="@+id/bt_6"
                    android:text="6"
                    android:layout_weight="1"
                    android:textSize="40sp"
                    android:layout_width="70dp"
                    android:layout_height="70dp" />
                <Button
                    android:id="@+id/bt_chen"
                    android:text="*"
                    android:layout_weight="1"
                    android:textSize="40sp"
                    android:layout_width="70dp"
                    android:layout_height="70dp" />
            </LinearLayout>

            <!--7,8,9,-按钮-->
            <LinearLayout
                android:id="@+id/ll_3"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                >

                <Button
                    android:id="@+id/bt_7"
                    android:text="7"
                    android:textSize="40sp"
                    android:layout_weight="1"
                    android:layout_width="70dp"
                    android:layout_height="70dp" />
                <Button
                    android:id="@+id/bt_8"
                    android:text="8"
                    android:textSize="40sp"
                    android:layout_weight="1"
                    android:layout_width="70dp"
                    android:layout_height="70dp" />
                <Button
                    android:id="@+id/bt_9"
                    android:text="9"
                    android:layout_weight="1"
                    android:textSize="40sp"
                    android:layout_width="70dp"
                    android:layout_height="70dp" />
                <Button
                    android:id="@+id/bt_jian"
                    android:text="-"
                    android:layout_weight="1"
                    android:textSize="40sp"
                    android:layout_width="70dp"
                    android:layout_height="70dp" />
            </LinearLayout>
            <!--7,8,9,-按钮-->
            <LinearLayout
                android:id="@+id/ll_4"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                >

                <Button
                    android:id="@+id/bt_c"
                    android:text="c"
                    android:textSize="40sp"
                    android:layout_weight="1"
                    android:layout_width="70dp"
                    android:layout_height="70dp" />
                <Button
                    android:id="@+id/bt_0"
                    android:text="0"
                    android:textSize="40sp"
                    android:layout_weight="1"
                    android:layout_width="70dp"
                    android:layout_height="70dp" />
                <Button
                    android:id="@+id/bt_den"
                    android:text="="
                    android:layout_weight="1"
                    android:textSize="40sp"
                    android:layout_width="70dp"
                    android:layout_height="70dp" />
                <Button
                    android:id="@+id/bt_jia"
                    android:text="+"
                    android:layout_weight="1"
                    android:textSize="40sp"
                    android:layout_width="70dp"
                    android:layout_height="70dp" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
